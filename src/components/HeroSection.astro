---
import useContent from "../utils/useContent"
import Button from "./Button.astro"

const title = useContent("global.title")
const heroBanner = useContent("heroBanner")
---

<section id="hero" class="w-full bg-[url('/audit.png')] bg-cover bg-center relative h-[450px] min-h-[450px]"> 
    <div class="absolute inset-0 bg-black opacity-55 z-5"></div>
    <div class="flex flex-col h-full w-full gap-5 items-center z-10 justify-center px-3 sm:px-0">
        <div class="w-full sm:w-2/3 flex flex-col items-center z-50 justify-center gap-5">
            <h1 class="text-2xl sm:text-4xl text-center font-bold  text-white">
                {heroBanner.title}
            </h1>
            <p class="text-xl text-white text-center">
                {heroBanner.description}
            </p>
        </div>
        <div class="flex sm:flex-row flex-col z-50 items-center justify-center gap-5 mt-5">
            <Button class="w-full sm:w-fit">{heroBanner.primaryButton}</Button>
            <Button class="w-full sm:w-fit" variant="secondary">{heroBanner.secondaryButton}</Button>
        </div>
    </div>
</section>